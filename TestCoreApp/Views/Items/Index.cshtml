@model IEnumerable<Item>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">

	<partial name="_Notifications" />

	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary text-light">Items View</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Items" asp-action="New">
				<i class="bi bi-plus-lg"></i> &nbsp; Add New Item 
			</a>
		</div>
	</div>
	<table class="table table-hover table-striped" style="width:100%">
		<thead class="table-light">
			<tr>
				<th scope="col">
					Item Name
				</th>
				<th scope="col">
					Item Price
				</th>
				<th scope="col">
					Category
				</th>
				<th scope="col">
					Img
				</th>
				<th scope="col">

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
					<tr>
						<td scope="row" width="30%">
						@item.Name
						</td>
						<td scope="row" width="20%">
						@item.Price
						</td>
						<td width="30%">
							@item.Category.Name
						</td>
						<td>
							<img src="~/images/@item.imagePath" style="width:48px" class="img-thumbnail"/>
						</td>
						<td>
							<a class="btn btn-sm btn-success" btn-sucess asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id">
								<i class="bi bi-pencil-fill"></i>
							</a>
							&nbsp;
						<a class="btn btn-sm btn-danger" btn-sucess asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id">
							<i class="bi bi-trash3"></i>
							</a>
						</td>
					</tr>
			}
		</tbody>

	</table>


</div>

